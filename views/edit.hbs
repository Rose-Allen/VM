<h1>Редактировать курс</h1>

<form action="/courses/edit" method="POST">
  <div class="input-field">
    <input
      placeholder="Название"
      id="name"
      type="text"
      class="validate"
      name="title"
      value="{{course.title}}"
      required
    />
    <label for="first_name">Название</label>
    <span class="helper-text" data-error="Введите название"></span>
  </div>
  <div class="input-field">
    <input
      placeholder="Название"
      id="price"
      name="price"
      type="text"
      class="validate"
      value="{{course.price}}"
      required
    />
    <label for="first_name">Цена</label>
    <span class="helper-text" data-error="Введите цену"></span>
  </div>
  <div class="input-field">
    <input
      placeholder="Название"
      id="img"
      name="img"
      type="text"
      class="validate"
      value="{{course.img}}"
      required
    />
    <label for="first_name">URL-Картинки</label>
    <span class="helper-text" data-error="Введите url-картинки"></span>
  </div>
  <input type="hidden" name="id" value="{{course.id}}" />
  <button class="btn btn-primary">Добавить курс </button>
</form>